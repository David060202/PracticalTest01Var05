<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PracticalTest01Var05MainActivity">

    <Button
        android:id="@+id/navigate_to_second_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigate to the second activity"
        android:layout_gravity="center" />

    <!-- GridLayout cu 3x3 pentru a avea 5 butoane -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <!-- Buton în colțul stânga-sus -->
        <Button
            android:id="@+id/button_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="TOP LEFT" />

        <!-- Buton în colțul dreapta-sus -->
        <Button
            android:id="@+id/button_top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="TOP RIGHT" />

        <!-- Buton în centru -->
        <Button
            android:id="@+id/button_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="CENTER" />

        <!-- Buton în colțul stânga-jos -->
        <Button
            android:id="@+id/button_bottom_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="BOTTOM LEFT" />

        <!-- Buton în colțul dreapta-jos -->
        <Button
            android:id="@+id/button_bottom_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:text="BOTTOM RIGHT" />

    </GridLayout>

    <!-- TextView needitabil sub GridLayout -->
    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Left, Top Right, Center, Bottom Left, Bottom Right"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="8dp"
        />
</LinearLayout>
